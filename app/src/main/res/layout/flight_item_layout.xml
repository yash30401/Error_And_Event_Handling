<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/personId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:maxLength="3"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Yashveer Singh"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/personId"
        app:layout_constraintStart_toEndOf="@+id/personId"
        app:layout_constraintTop_toTopOf="@+id/personId" />

    <TextView
        android:id="@+id/personTrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="20"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/personName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/personName" />

    <TextView
        android:id="@+id/flightName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Indigo"
        android:textColor="#232323"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/personId"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <TextView
        android:id="@+id/flightCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="India"
        android:textColor="#232323"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/flightName"
        app:layout_constraintStart_toEndOf="@+id/flightName"
        app:layout_constraintTop_toTopOf="@+id/flightName" />

    <TextView
        android:id="@+id/flightSlogan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="lasf safaskvf asbasfbbfas safn asfhasbfassf kfhobfa hfaslbf samfbalshfa sfkabsfkbassf akbfka"
        android:textColor="#858585"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/personTrips"
        app:layout_constraintStart_toStartOf="@+id/personId"
        app:layout_constraintTop_toBottomOf="@+id/flightCountry" />
</androidx.constraintlayout.widget.ConstraintLayout>